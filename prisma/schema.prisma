generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Transaction {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  amount     Float
  description   String
  categoryId String   @db.ObjectId 
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  type       String
  date       DateTime
}

model Category {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
